<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0.1"
        id        = "uk.ac.manchester.linguasnappdist"
        version   = "1.0.0"
        ios-CFBundleVersion="1.0.0"
        versionCode = "1">

  <name>Lingua Snapp Dist</name>

  <description>
    LinguaSnapp - The Global Multi-Lingual Landscape
  </description>

  <author href="http://linguasnapp.com" email="help@linguasnapp.com">
    LinguaSnapp IT Services
  </author>

  <preference name="permissions" value="none"/>
  <preference name="phonegap-version" value="cli-7.1.0" />
  <preference name="pgb-builder-version" value="1"/>
  <preference name="orientation" value="portrait" />
  <preference name="ios-statusbarstyle" value="black-opaque" /> 
  <preference name="target-device" value="handset" />
  
  <preference name="StatusBarOverlaysWebView" value="false" />
  <preference name="StatusBarBackgroundColor" value="#165769" /> <!--Your color value will go here-->
  <preference name="StatusBarStyle" value="lightcontent" />

  <preference name="ShowSplashScreen" value="true" />
  <preference name="SplashScreen" value="splash"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <preference name="AutoHideSplashScreen" value="true" />
  <preference name="SplashShowOnlyFirstTime" value="false" />
  <preference name="FadeSplashScreen" value="false"/>

  <platform name="ios">
    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="images/icon/ios/Icon-60@3x.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="images/icon/ios/Icon-60.png" width="60" height="60" />
    <icon src="images/icon/ios/Icon-60@2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon src="images/icon/ios/Icon-76.png" width="76" height="76" />
    <icon src="images/icon/ios/Icon-76@2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="images/icon/ios/Icon-40.png" width="40" height="40" />
    <icon src="images/icon/ios/Icon-40@2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="images/icon/ios/Icon.png" width="57" height="57" />
    <icon src="images/icon/ios/Icon@2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon src="images/icon/ios/Icon-72.png" width="72" height="72" />
    <icon src="images/icon/ios/Icon-72@2x.png" width="144" height="144" />
    <!-- iPad Pro -->
    <icon src="images/icon/ios/Icon-167.png" width="167" height="167" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="images/icon/ios/Icon-small.png" width="29" height="29" />
    <icon src="images/icon/ios/Icon-small@2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="images/icon/ios/Icon-50.png" width="50" height="50" />
    <icon src="images/icon/ios/Icon-50@2x.png" width="100" height="100" />
  
    <!-- iPad Pro -->
    <icon src="images/icon/ios/Icon-83.5@2x.png" width="167" height="167" />
    
  
    <icon src="images/icon/ios/iTunesArtwork.png" platform="ios" width="1024" height="1024" />
  </platform>

  <platform name="android">
    <icon src="images/icon/android/ldpi.png" density="ldpi" />
    <icon src="images/icon/android/mdpi.png" density="mdpi" />
    <icon src="images/icon/android/hdpi.png" density="hdpi" />
    <icon src="images/icon/android/xhdpi.png" density="xhdpi" />
  </platform>
        
  <platform name="android">
    <preference name="android-minSdkVersion" value="26" />
  </platform>

  <platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="images/splash/android/splash-land-hdpi.png" density="land-hdpi"/>
    <splash src="images/splash/android/splash-land-ldpi.png" density="land-ldpi"/>
    <splash src="images/splash/android/splash-land-mdpi.png" density="land-mdpi"/>
    <splash src="images/splash/android/splash-land-xhdpi.png" density="land-xhdpi"/>

    <splash src="images/splash/android/splash-port-hdpi.png" density="port-hdpi"/>
    <splash src="images/splash/android/splash-port-ldpi.png" density="port-ldpi"/>
    <splash src="images/splash/android/splash-port-mdpi.png" density="port-mdpi"/>
    <splash src="images/splash/android/splash-port-xhdpi.png" density="port-xhdpi"/>
  </platform>

  <platform name="ios">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="images/splash/ios/Default~iphone.png" width="320" height="480"/>
    <splash src="images/splash/ios/Default@2x~iphone.png" width="640" height="960"/>
    <splash src="images/splash/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
    <splash src="images/splash/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
    <splash src="images/splash/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
    <splash src="images/splash/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
    <splash src="images/splash/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
    
  </platform>



  <feature name="http://api.phonegap.com/1.0/network"/>
  <feature name="http://api.phonegap.com/1.0/notification"/>
  <feature name="http://api.phonegap.com/1.0/device"/> 
  <feature name="http://api.phonegap.com/1.0/camera"/> 
  <feature name="http://api.phonegap.com/1.0/geolocation"/> 
  
  <plugin name="cordova-sqlite-evcore-extbuild-free" version="0.9.7" source="npm" />
  <plugin name="cordova-plugin-device" version="2.0.2" source="npm" />
  <plugin name="cordova-plugin-network-information" version="2.0.1" source="npm"/>
  <plugin name="cordova-plugin-camera" version="4.0.2" source="npm" />
  <plugin name="cordova-plugin-geolocation" version="4.0.1" source="npm" />
  <plugin name="cordova-plugin-dialogs" version="2.0.1" source="npm" />
  <plugin name="cordova-plugin-statusbar" version="2.4.2" source="npm" />
  <plugin name="cordova-plugin-inappbrowser" spec="3.0.0" source="npm" />
  <plugin name="cordova-plugin-splashscreen" spec="5.0.2" source="npm"/>
  <plugin name="cordova-plugin-whitelist" spec="1.3.3" source="npm" />
  <plugin name="cordova-plugin-globalization" spec="1.11.0" source="npm" />

  <access origin="https://api.linguasnapp.com" subdomains="true" />
    

  <feature name="Device">
    <param name="android-package" value="org.apache.cordova.device.Device" />
  
  </feature>
  
  <feature name="Camera">
    <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
  </feature>
  
  <feature name="Geolocation">
      <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
  </feature>
  
   <feature name="StatusBar">
            <param name="ios-package" value="CDVStatusBar" onload="true" />
        </feature>
  

</widget>
